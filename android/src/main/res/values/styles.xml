<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/primary_very_dark_color</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:windowBackground">@color/background_dark_color</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.Title</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/TextAppearance.Body</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.Title</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.Body</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="PopupMenu" parent="Base.Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/background_dark_secondary_color</item>
        <item name="android:textAppearance">@style/TextAppearance.Body</item>
    </style>

    <!-- Bottom Sheet Dialog -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <!-- Slider -->

    <!-- Apply this Theme to a Slider Component with the android:theme attribute -->
    <style name="SliderTheme" parent="AppTheme">
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/colorPrimary</item>
    </style>

    <!-- Apply this Style to a Slider Component with the style attribute -->
    <style name="SliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="android:theme">@style/SliderTheme</item>
        <item name="labelStyle">@style/TextAppearance.Caption</item>
        <item name="thumbColor">@color/slider_active_color</item>
        <item name="trackColorActive">@color/slider_active_color</item>
        <item name="tickColorActive">@color/slider_active_color</item>
        <item name="trackColorInactive">@color/slider_track_inactive_color</item>
        <item name="tickColorInactive">@color/slider_tick_inactive_color</item>
        <item name="haloColor">@color/slider_halo_color</item>
        <item name="labelBehavior">gone</item>
    </style>

    <!-- TimeBar -->

    <style name="TimeBar">
        <item name="played_color">@color/time_bar_played_color</item>
        <item name="unplayed_color">@color/time_bar_unplayed_color</item>
        <item name="scrubber_color">@color/time_bar_scrubber_color</item>
        <item name="buffered_color">@color/time_bar_buffered_color</item>
        <item name="ad_marker_color">@color/time_bar_ad_marker_color</item>
        <item name="played_ad_marker_color">@color/time_bar_played_ad_marker_color</item>
    </style>

    <!-- Search Widget -->

    <style name="SearchBar" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/primary_color</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusedByDefault" tools:targetApi="o">true</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_xsmall</item>
        <item name="android:paddingBottom">@dimen/spacing_xsmall</item>
        <item name="android:textAppearance">@style/TextAppearance.Title</item>
        <item name="android:textColorHint">@color/text_primary_subtle_color</item>
        <item name="android:elevation">@dimen/search_bar_elevation</item>
    </style>

    <!-- Chips -->

    <style name="ChipAction" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.Body</item>
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light.NoActionBar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipBackgroundColor">@color/bg_chip_item_one_color</item>
        <item name="checkedIcon">@null</item>
        <item name="android:elevation">@dimen/chip_elevation</item>
    </style>

    <style name="ChipPrimary" parent="ChipAction">
        <item name="chipBackgroundColor">@color/bg_chip_item_primary_color</item>
    </style>

    <style name="ChipEntry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAppearance">@style/TextAppearance.Body</item>
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light.NoActionBar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipBackgroundColor">@color/bg_chip_item_one_color</item>
        <item name="checkedIcon">@null</item>
        <item name="android:elevation">@dimen/chip_elevation</item>
    </style>

    <style name="ChipFilter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textAppearance">@style/TextAppearance.Body</item>
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light.NoActionBar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipBackgroundColor">@color/bg_chip_item_one_color</item>
        <item name="checkedIcon">@null</item>
        <item name="android:elevation">@dimen/chip_elevation</item>
    </style>

    <style name="ChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.Body</item>
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light.NoActionBar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipBackgroundColor">@color/bg_chip_item_one_color</item>
        <item name="checkedIcon">@null</item>
        <item name="android:elevation">@dimen/chip_elevation</item>
    </style>

    <!-- Default Button -->

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:background">@drawable/bg_default_button</item>
        <item name="android:backgroundTint">@color/bg_button_default_color</item>
        <item name="android:tint">@color/text_button_default_color</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:textColor">@color/text_button_default_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/text_button_default_color</item>
        <item name="backgroundTint">@color/bg_button_default_color</item>
    </style>

    <!-- Accent Button -->
    <style name="AccentButton" parent="DefaultButton">
        <item name="android:backgroundTint">@color/bg_button_accent_color</item>
        <item name="backgroundTint">@color/bg_button_accent_color</item>
    </style>

    <!-- Subscribe Button -->
    <style name="SubscribeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Button.Accent.Secondary</item>
        <item name="android:textColor">@color/button_subscription_text_color</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textOn">@string/button_unsubscribe</item>
        <item name="android:textOff">@string/button_subscribe</item>
    </style>

    <!-- Action Button -->
    <style name="ActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/video_action_width</item>
        <item name="android:layout_height">@dimen/video_action_height</item>
        <item name="android:background">@drawable/bg_video_action</item>
        <item name="android:padding">@dimen/video_action_button_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.Button.Subtle</item>
        <item name="android:tint">@color/white</item>
        <item name="android:backgroundTint">@color/bg_video_info_action_color</item>
        <item name="android:elevation">@dimen/elevation_action_button</item>
        <item name="backgroundTint">@color/bg_video_info_action_color</item>
    </style>

    <!-- CollapsingToolbarLayout -->
    <style name="CollapsingToolbarLayout">
        <item name="android:fitsSystemWindows">true</item>
        <item name="contentScrim">@color/collapsing_toolbar_layout_scrim_color</item>
        <item name="scrimAnimationDuration">@integer/collapsible_toolbar_scrim_anim_duration</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.Title</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.H5</item>
        <item name="expandedTitleMargin">@dimen/spacing_small</item>
    </style>

    <!-- Text Input Layout -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textAppearance">@style/TextAppearance.Body</item>
        <item name="hintTextAppearance">@style/TextAppearance.Caption</item>
        <item name="errorTextAppearance">@style/TextAppearance.Caption</item>
        <item name="backgroundColor">@color/text_input_background_color</item>
        <item name="android:textColorHint">@color/text_input_expanded_hint_color</item>
        <item name="hintTextColor">@color/text_input_collapsed_hint_color</item>
        <item name="android:textColor">@color/text_input_text_color</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
        <item name="boxStrokeErrorColor">@color/text_input_box_stroke_error_color</item>
        <item name="errorTextColor">@color/error_color</item>
    </style>

    <!-- Bottom Navigation Bar -->
    <style name="BottomNavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_navigation_bar_height</item>
        <item name="android:background">@color/bottom_navbar_background_color</item>
        <item name="itemIconTint">@color/icon_menu_color</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Caption.Accent</item>
        <item name="itemTextAppearance">@style/TextAppearance.Caption</item>
        <item name="itemTextColor">@color/text_menu_color</item>
        <item name="android:elevation">@dimen/elevation_bottom_navigation</item>
    </style>

</resources>