<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/videoShowcaseBackgroundView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/videoShowcaseImageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/video_showcase_image_default_height"
        android:background="#000000"
        android:contentDescription="@string/cd_video_showcase_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/videoLengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_xsmall"
        android:layout_marginBottom="@dimen/spacing_xsmall"
        android:background="@color/background_dark_transparency_75_percent"
        android:padding="@dimen/spacing_xxsmall"
        android:text="5:30"
        android:textAppearance="@style/TextAppearance.Body"
        app:layout_constraintBottom_toBottomOf="@+id/videoShowcaseImageView"
        app:layout_constraintEnd_toEndOf="@+id/videoShowcaseImageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/channelImageView"
        android:layout_width="@dimen/video_info_channel_image_size"
        android:layout_height="@dimen/video_info_channel_image_size"
        android:layout_marginStart="@dimen/spacing_horizontal_default"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_horizontal_default"
        android:contentDescription="@string/cd_video_info_channel_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoShowcaseImageView" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_horizontal_default"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_horizontal_default"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:text="Test Title"
        android:textAppearance="@style/TextAppearance.SubHeader"
        app:layout_constraintEnd_toStartOf="@+id/overflowOptionsImageView"
        app:layout_constraintStart_toEndOf="@+id/channelImageView"
        app:layout_constraintTop_toBottomOf="@+id/videoShowcaseImageView" />

    <ImageView
        android:id="@+id/overflowOptionsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cd_video_recommendation_overflow_options"
        android:padding="@dimen/spacing_small"
        android:src="@drawable/ic_overflow_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoShowcaseImageView" />

    <TextView
        android:id="@+id/detailsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_horizontal_default"
        android:layout_marginTop="@dimen/spacing_xxsmall"
        android:layout_marginEnd="@dimen/spacing_horizontal_default"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:text="Details Text"
        android:textAppearance="@style/TextAppearance.Body.Subtle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/channelImageView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/providerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_horizontal_default"
        android:layout_marginTop="@dimen/spacing_xxsmall"
        android:layout_marginEnd="@dimen/spacing_horizontal_default"
        android:text="Provided by chRyNaN"
        android:textAppearance="@style/TextAppearance.Body.Subtle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/channelImageView"
        app:layout_constraintTop_toBottomOf="@+id/detailsTextView" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/horizontal_divider_height"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@color/divider_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/providerTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>