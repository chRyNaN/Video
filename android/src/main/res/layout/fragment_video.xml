<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_dark_color">

    <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/videoPlayerView"
            android:layout_width="0dp"
            android:layout_height="@dimen/video_expanded_default_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:layout_marginBottom="@dimen/spacing_xxsmall"
            android:layout_marginStart="@dimen/default_horizontal_spacing"
            android:text="Title Example"
            android:textAppearance="@style/TextAppearance.Title.Light"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/videoPlayerView"
            app:layout_constraintEnd_toStartOf="@+id/playIconImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/descriptionTextView"/>

    <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/spacing_xsmall"
            android:layout_marginStart="@dimen/default_horizontal_spacing"
            android:text="Description Example"
            android:textAppearance="@style/TextAppearance.Body.Light.Secondary"
            app:layout_constraintStart_toEndOf="@+id/videoPlayerView"
            app:layout_constraintBottom_toBottomOf="@+id/videoPlayerView"
            app:layout_constraintEnd_toStartOf="@+id/playIconImageView"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"/>

    <ImageView
            android:id="@+id/playIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_xsmall"
            android:src="@drawable/state_play_pause"
            android:contentDescription="@string/cd_video_action_play_pause"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancelIconImageView"
            app:layout_constraintBottom_toBottomOf="@+id/videoPlayerView"/>

    <ImageView
            android:id="@+id/cancelIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_xsmall"
            android:layout_marginEnd="@dimen/spacing_xsmall"
            android:src="@drawable/ic_stop"
            android:contentDescription="@string/cd_video_action_stop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/videoPlayerView"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/recycler_view_bottom_padding"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/videoPlayerView"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>